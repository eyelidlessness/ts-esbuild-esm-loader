{
  "name": "ts-esbuild-esm-loader",
  "version": "1.0.0",
  "description": "Experimental Loader for Node.js ESM modules with import aliases specified in tsconfig paths",
  "repository": "git@github.com:eyelidlessness/ts-esbuild-esm-loader.git",
  "author": "eyelidlessness <gnosis@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0 <15"
  },
  "volta": {
    "node": "14.15.4"
  },
  "type": "module",
  "files": [
    "dist/index.*",
    "dist/lib",
    "dist/lib/**/*.d.ts"
  ],
  "main": "./dist/index.js",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.0.0",
    "@types/node": "^14.14.33",
    "@types/yargs": "^16.0.0",
    "ava": "^3.15.0",
    "chokidar": "^3.5.1",
    "chokidar-cli": "^2.1.0",
    "del": "^6.0.0",
    "empower-core": "^1.2.0",
    "esbuild": "^0.9.0",
    "esbuild-runner": "^1.3.2",
    "eslint": "^7.21.0",
    "typescript": "^4.2.3",
    "uvu": "^0.5.1",
    "yargs": "^16.2.0"
  },
  "peerDependencies": {
    "esbuild": "^0.9.0",
    "typescript": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    }
  },
  "scripts": {
    "build": "yarn clean && yarn run:esr ./scripts/build.ts",
    "clean": "yarn run:esr ./scripts/clean.ts",
    "lint": "eslint",
    "prepare": "yarn clean && yarn lint && yarn build && yarn test",
    "run:esr": "esr --cache",
    "run:loader": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-loader=./dist/index.js\" $@",
    "test": "yarn run:loader ava",
    "test:uvu": "yarn run:loader uvu . '.*\\.uvuTest\\.(cjs|js|jsx|mjs|ts|tsx)$'",
    "test:uvu:watch": "yarn run watch yarn run test:uvu",
    "test:watch": "yarn run test --watch",
    "watch": "yarn run:esr ./scripts/watch.ts"
  }
}
